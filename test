    <div class="interface-container">
        <h2>Klantvraag Verwerking</h2>
        
        <label for="klantvraag">Vraag van de klant:</label>
        <textarea id="klantvraag" placeholder="Typ hier de vraag..."></textarea>

        <div class="button-grid">
            <button class="action-btn">Status levering</button>
            <button class="action-btn">Wijziging levering</button>
            <button class="action-btn btn-cancel">Annulering order</button>
            <button class="action-btn btn-discount">Korting/punten</button>
        </div>

        <div class="store-locator">
            <h3>üìç Bouwmarkt Zoeker (Gamma/Karwei)</h3>
            <p style="font-size: 0.9em; color: #666;">Zoek op stad voor dichtstbijzijnde locaties.</p>
            
            <div class="search-box">
                <input type="text" id="stadInput" placeholder="Bijv. Amsterdam, Rotterdam..." value="">
                <button onclick="zoekBouwmarkt()">Zoek</button>
            </div>

            <div id="resultaten-lijst"></div>

            <iframe 
                id="googleMap"
                class="map-frame"
                src="https://maps.google.com/maps?q=Gamma+Karwei+Nederland&t=&z=7&ie=UTF8&iwloc=&output=embed"
                allowfullscreen>
            </iframe>
        </div>
    </div>

    <script>
        // --- SIMULATIE DATA ---
        // Omdat we geen echte betaalde Google API Key hebben, gebruiken we hier een lijstje
        // met voorbeeldgegevens. In een echte app zou dit uit een database komen.
        const database = {
            "amsterdam": [
                { naam: "Gamma Amsterdam-West", tel: "020-1234567" },
                { naam: "Karwei Amsterdam-Noord", tel: "020-7654321" },
                { naam: "Gamma Amsterdam-Zuid", tel: "020-9988776" }
            ],
            "rotterdam": [
                { naam: "Gamma Rotterdam-Centrum", tel: "010-1122334" },
                { naam: "Karwei Rotterdam-Zuid", tel: "010-4455667" }
            ],
            "utrecht": [
                { naam: "Gamma Utrecht", tel: "030-1234567" },
                { naam: "Karwei Utrecht-Lage Weide", tel: "030-9876543" }
            ],
            "hilversum": [
                 { naam: "Gamma Hilversum", tel: "035-6851234" },
                 { naam: "Karwei Hilversum", tel: "035-6834567" }
            ]
        };

        function zoekBouwmarkt() {
            // 1. Haal de ingevoerde stad op
            var stad = document.getElementById('stadInput').value.trim();
            
            if(!stad) {
                alert("Vul aub een stad in.");
                return;
            }

            // 2. Update de Google Maps kaart (Dit werkt ECHT, via de embed truc)
            // We zoeken op: Gamma + Karwei + Stad
            var mapUrl = "https://maps.google.com/maps?q=Gamma+Karwei+" + stad + "&t=&z=13&ie=UTF8&iwloc=&output=embed";
            document.getElementById('googleMap').src = mapUrl;

            // 3. Update de tekstresultaten (uit onze 'database')
            var stadKey = stad.toLowerCase();
            var resultatenDiv = document.getElementById('resultaten-lijst');
            resultatenDiv.style.display = 'block';
            resultatenDiv.innerHTML = ""; // Leegmaken

            if (database[stadKey]) {
                // We hebben data voor deze stad!
                var html = "<strong>Gevonden vestigingen in " + stad + ":</strong><br><br>";
                
                database[stadKey].forEach(function(winkel) {
                    html += `
                        <div class="store-item">
                            <div class="store-name">${winkel.naam}</div>
                            <div>üìû <span class="store-phone">${winkel.tel}</span></div>
                        </div>
                    `;
                });
                resultatenDiv.innerHTML = html;
            } else {
                // Geen data in onze simulatie, maar de kaart werkt wel
                resultatenDiv.innerHTML = `
                    <div style="color: #d9534f;">
                        <strong>Let op:</strong> Geen telefoonnummers in de demo-database voor '${stad}'.<br>
                        De locaties worden wel op de kaart hieronder getoond.
                    </div>
                `;
            }
        }
    </script>
